#!/bin/bash

watch -t '
echo -n "0/1 | " && \
docker service ls | grep "0/1" | wc -l && \
\
echo -n "1/1 | " && \
docker service ls | grep "1/1" | wc -l && \
\
echo && \
\
echo -n "0/2 | " && \
docker service ls | grep "0/2" | wc -l
\
echo -n "1/2 | " && \
docker service ls | grep "1/2" | wc -l && \
\
echo -n "2/2 | " && \
docker service ls | grep "2/2" | wc -l
'
