#!/bin/bash


# Currently, we are not yet using Docker containers for evaluation, but Docker Machine for convenience


# m4.xlarge
# c4.8xlarge

echo "Eval > Create machine"
docker-machine create \
	--driver amazonec2 \
	--amazonec2-region eu-central-1 \
	--amazonec2-security-group dlubm-eval \
	--amazonec2-instance-type m4.xlarge \
	dlubm-eval
echo "Eval > Created machine"

#ip_internal=$(docker-machine ssh dlubm-eval "ifconfig eth0 | grep 'inet addr' | cut -d ':' -f 2 | cut -d ' ' -f 1")
#echo "Eval > Machine IP internal > ${ip_internal}"

ip_external=$(docker-machine ip dlubm-eval)
echo "Eval > Machine IP external > ${ip_external}"
